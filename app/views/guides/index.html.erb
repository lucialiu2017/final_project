<div class="page-header">
  <h1>
    Tour Guides
    <a href="/guides/new" class="btn btn-lg btn-success">Add Tour Guide</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Age</th>
        <th>A Little About Me...</th>
        <th>Actions</th>
      </tr>

      <% @guides.each do |guide| %>
      <tr>
        <td><img src="<%= guide.image_url %>"width="100"></td>
        <td><%= guide.name %></td>
        <td><%= guide.age %></td>
        <td><%= guide.bio %></td>
        <td>
          <a href="/guides/<%= guide.id %>" class="btn btn-primary">Show</a>
          <a href="/guides/<%= guide.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_guide/<%= guide.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
